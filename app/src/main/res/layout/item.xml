<?xml version="1.0" encoding="utf-8"?>

<!-- layout for the cake item -->

<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"

    android:layout_height="@dimen/good_list_item_height"

    android:paddingTop="@dimen/space_between_content_areas"

    android:paddingBottom="@dimen/space_between_content_areas"

    >

    <!-- image for the good -->

    <ImageView

        android:layout_width="wrap_content"

        android:layout_height="match_parent"

        android:id="@+id/good_item_iv_picture"

        android:contentDescription="@null"

        android:layout_alignParentStart="true"

        tools:src="@drawable/item_1"

        />

    <!-- text for the good name -->

    <TextView

        android:id="@+id/good_item_tv_name"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:layout_marginStart="@dimen/layout_padding"

        android:layout_marginTop="@dimen/layout_padding"

        android:layout_toEndOf="@id/good_item_iv_picture"

        android:layout_centerHorizontal="true"

        style="@style/TextAppearance.AppCompat.Headline"

        tools:text="@string/item_1"

        />

    <!-- text for the good value -->

    <TextView

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:id="@+id/good_item_tv_value"

        android:layout_marginStart="@dimen/layout_padding"

        android:layout_marginTop="@dimen/layout_padding"

        android:layout_toEndOf="@id/good_item_iv_picture"

        android:layout_below="@id/good_item_tv_name"

        style="@style/TextAppearance.AppCompat.Title"

        tools:text="500 XOF"

        />

</RelativeLayout>